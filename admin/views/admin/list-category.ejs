<%- include("partials/header.ejs") %>

<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">List Category</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">List Category</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements disabled -->
        <div class="card card-warning">
          <div class="card-header">
            <h3 class="card-title">List Category</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="tbl-list-category"  class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>#id</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                 <% categories.forEach(function(data) { %>
                    <tr>
                      <td><%= data.id  %> </td>
                      <td><%= data.name  %> </td>
                      <td>
                        <% if(data.status == '1'){ %>
                          <button class="btn btn-success">Active</button>
                        <% } else{ %>
                          <button class="btn btn-danger">Inactive</button>
                        <%  }%>  
                        <%= data.status  %> 
                      </td>

                      <td>
                        <a class="btn btn-primary" href="/admin/edit-category/<%= data.id %>">Edit</a>
                        <form action="/admin/delete-category" method="post" id="frm-delete-categodry-<%= data.id %>">
                          <input type="hidden" value="<%=  data.id %>" name="categodry_id">
                        </form>  
                        <a  onclick="if(confirm('Are you sure want to delete?')){ $('#frm-delete-categodry-<%= data.id %>').submit() }" id="delete_category"  class="btn btn-danger " href="javascript:void(0)">Delete</a>
                      </td>
                    </tr>
                 <% }) %> 
              </tbody>
              <tfoot>
                <tr>
                  <th>#id</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
<%- include("partials/footer.ejs") %>
