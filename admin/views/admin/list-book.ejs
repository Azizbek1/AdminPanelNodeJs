<%- include("partials/header.ejs") %>
<style>
  .image-thubnail{
    height: 80px;
    width: 80px;
  }
</style>
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Book Category</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Book Category</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements disabled -->
        <div class="card card-warning">
          <div class="card-header">
            <h3 class="card-title">Book Category</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="tbl-list-book"  class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th>Cover_image</th>
                  <th>Category</th>
                  <th>Name</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% books.forEach(function (data) { %> 
                    <tr>
                      <td><img class="image-thubnail" src="<%= data.cover_image %>" alt="jpg"></td>
                      <td><%= data.category.name %> </td>
                      <td><%= data.name %> </td>
                      <td><%= data.amount %> </td>
                      <td><%
                          if(data.status == '1') {
                            %>  
                            <button class="btn btn-success">Active</button>
                           <% 
                        } else{
                          %>  
                           <button class="btn btn-danger">Inactive</button>
                          <% 
                        }
                        %> </td>
                      <td>
                        <a href="/admin/edit-book/<%= data.id %>" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>
                        <form action="/admin/delete-book/<%= data.id %>" method="post" id="frm-delete-book-<%= data.id %>">
                            <input type="hidden" value="<%= data.id %>" name="book_id">
                        </form>
                        <a href="javascript:void(0)" 
                        onclick="if(confirm('Are you sure want delete?')) {
                          $('#frm-delete-book-<%= data.id %>').submit()
                        }"
                        
                        class="btn btn-danger"> Delete<i class="fa fa-trash"></i></a>
                      </td>
                    </tr>
                <% }) %> 
              </tbody>
              <tfoot>
                <tr>
                    <th>Cover_image</th>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
<%- include("partials/footer.ejs") %>
