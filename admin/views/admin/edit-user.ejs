<%- include("partials/header.ejs") %> 
<style>
    #frm-add-user label.error {
    color: red;
  }
</style>
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Edit User</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Edit User</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements disabled -->
        <div class="card card-warning">
          <div class="card-header">
            <h3 class="card-title">Edit User</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form method="post" action="/admin/edit-user/<%= user.id %>" id="frm-add-user"  >
              <div class="row">
                <div class="col-sm-6">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Name</label>
                    <input value="<%= user.name %>" required type="text" class="form-control" placeholder="Enter name" name="name">
                  </div>
                </div>
                <div class="col-sm-6">
                  <!-- text input -->
                  <div class="form-group">
                    <label>Email</label>
                    <input value="<%= user.email %>" required type="email" class="form-control" placeholder="Enter email" name="email">
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                      <label>Mobile Number</label>
                      <input value="<%= user.mobile %>" required type="text" class="form-control" placeholder="Enter mobile" name="mobile">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Gender</label>
                      <select  name="dd_gender" required  class="form-control">
                        <option  value="">Choose Gender</option>
                        <option <% if(user.gender == 'male') { %> selected <%  }  %> value="male">male</option>
                        <option <% if(user.gender == 'female') { %> selected <%  }  %> value="female">female</option>
                        <option <% if(user.gender == 'other') { %> selected <%  }  %> value="other">other</option>
                      </select>
                    </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                      <label>Adress</label>
                      <textarea  required name="adress" placeholder="enter adress" class="form-control" id="" cols="30" rows="10"><%= user.adress %></textarea>
                    </div>
                </div>
                 <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Status</label>
                      <select name="status" required id="" class="form-control">
                        <option <% if(user.status == '1') { %> selected <%  }  %>value="1">Active</option>
                        <option <% if(user.status == '0') { %> selected <%  }  %> value="0">Inactive</option>
                      </select>
                    </div>
                </div>
              </div>
        
              <button class="btn btn-dark" type="submit">Submit</button>
            </form>

          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
<%- include("partials/footer.ejs") %> 
