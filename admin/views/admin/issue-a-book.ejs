<%- include("partials/header.ejs") %> 
<style>
    #frm-issue-book label.error {
    color: red;
  }
</style>
<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Issue a Book</h1>
      </div>
      <!-- /.col -->
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Issue a Book</li>
        </ol>
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements disabled -->
        <div class="card card-warning">
          <div class="card-header">
            <h3 class="card-title">Issue a Book</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <form method="post" action="/admin/issue-book/" id="frm-issue-book"> 
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select Category</label>
                    <select name="dd_category" required id="dd_category" class="form-control" >
                      <option value="1">Choose Category</option>
                      <% categories.forEach(function(category){ %>
                         <option value="<%= category.id %>"><%= category.name %>  </option>
                       <% }) %>  
                    </select>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select Book</label>
                    <select name="dd_book" required id="dd_book_list" class="form-control">
                      <option value="1">Choose book</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>Select User</label>
                    <select name="dd_user" required id="" class="form-control">
                      <option value="1">Choose user</option>
                      <% users.forEach(function(user){ %>
                        <option value="<%= user.id %>"><%= user.name %> <%= user.email %>  </option>
                      <% }) %>  
                    </select>
                  </div>
                </div>
                <div class="col-sm-6">
                  <div class="form-group">
                    <label>How many days we want issue?</label>
                    <select name="dd_days" required id="" class="form-control">
                      <option value="1">Choose Days</option>
                      <option value="7">7 days</option>
                      <option value="30">30 days</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                      <label>Select Status</label>
                      <select name="status" required id="" class="form-control">
                        <option value="1">Active</option>
                        <option value="0">Inactive</option>
                      </select>
                    </div>
                </div>
              </div>
              <button class="btn btn-dark" type="submit">Submit</button>
            </form>

          </div>
          <!-- /.card-body -->
        </div>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->
<%- include("partials/footer.ejs") %> 
